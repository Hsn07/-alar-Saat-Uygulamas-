<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arkaplan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hsn07.calarsaat.Ayarlar">


        <Switch
            android:id="@+id/secenek"
            android:layout_width="368dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="Uyarı Şekli"
            android:textOff="Alarm"
            android:textOn="Bildirim"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            />

        <SeekBar
            android:id="@+id/sbduzey"
            android:layout_width="225dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/secenek"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="47dp"
            android:max="15"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintRight_toLeftOf="@+id/tvsesduzeyi"
            app:layout_constraintTop_toBottomOf="@+id/secenek"
            tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvsesduzeyi"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/sbduzey"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secenek"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="181dp"
            android:layout_height="51dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="46dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Erteleme Suresi"
            android:textSize="25sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/etdk"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/etdk"
            android:layout_width="157dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="46dp"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Dk"
            android:inputType="number"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvsesduzeyi" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:paddingLeft="5dp"
            app:layout_constraintTop_toBottomOf="@+id/secenek"
            app:srcCompat="@drawable/speaker"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/btnkaydet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="KAYDET"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/tvdk" />

        <TextView
            android:id="@+id/tvdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/etdk"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20sp"/>


</android.support.constraint.ConstraintLayout>
